@{
    var categorias = ViewBag.Categorias;
}

<section class="container mt-5">
    <form>
        <h2>Cadastro de produtos</h2>

        <div class="mb-1">
            <label class="form-label" for="foto">Foto:</label>
            <input class="form-control shadow-none" type="file" name="foto" id="foto" />
        </div>

        <div class="mb-1">
            <label class="form-label" for="nome">Nome:</label>
            <input class="form-control shadow-none" type="text" name="nome" id="nome" />
        </div>

        <div class="mb-1">
            <label class="form-label" for="marca">Marca:</label>
            <input class="form-control shadow-none" type="text" name="marca" id="marca" />
        </div>

        <div class="mb-1">
            <label class="form-label" for="valor">Valor:</label>
            <input class="form-control shadow-none" type="number" name="valor" id="valor" min="1" step="any" />
        </div>

        <div class="mb-1">
            <label class="form-label" for="quantidade">Quantidade:</label>
            <input class="form-control shadow-none" type="number" name="quantidade" id="quantidade" min="1" step="any" />
        </div>

        <div class="mb-1">
            <label class="form-label" for="nome">Categoria:</label>
            <select class="form-select" asp-items="@(new SelectList(categorias, "Id", "Nome"))">
            </select>
        </div>

        <div class="d-flex mt-3">
            <button type="submit" class="btn btn-success w-50 me-2"><i class="bi bi-plus-circle me-1"></i> Cadastrar</button>
            <a class="btn btn-info w-50" asp-action="Index"><i class="bi bi-left-circle me-1"></i> Voltar</a>
        </div>
    </form>
</section>