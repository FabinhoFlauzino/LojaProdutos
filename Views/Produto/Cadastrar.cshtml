@using LojaProdutos.Models
@model ProdutoModel 

<section class="container mt-5">
    <form asp-action="Cadastrar" method="post" enctype="multipart/form-data">
        <h2>Cadastro de Produtos</h2>

        <div class="mb-3">
            <label class="form-label" for="foto">Foto:</label>
            <input class="form-control shadow-none" type="file" name="foto" id="foto" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="nome">Nome:</label>
            <input class="form-control shadow-none" type="text" name="Nome" id="nome" required />
        </div>

        <div class="mb-3">
            <label class="form-label" for="marca">Marca:</label>
            <input class="form-control shadow-none" type="text" name="Marca" id="marca" required />
        </div>

        <div class="mb-3">
            <label class="form-label" for="valor">Valor:</label>
            <input class="form-control shadow-none" type="number" name="Valor" id="valor" min="0.01" step="0.01" required />
        </div>

        <div class="mb-3">
            <label class="form-label" for="quantidade">Quantidade:</label>
            <input class="form-control shadow-none" type="number" name="QuantidadeEstoque" id="quantidade" min="1" required />
        </div>

        <div class="mb-3">
            <label class="form-label" for="categoria">Categoria:</label>
            <select class="form-select" name="CategoriaModelId" id="categoria" required
                    asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nome"))">
                <option value="">Selecione uma categoria</option>
            </select>
        </div>

        <div class="d-flex mt-3">
            <button type="submit" class="btn btn-success w-50 me-2">
                <i class="bi bi-plus-circle me-1"></i> Cadastrar
            </button>
            <a class="btn btn-info w-50" asp-action="Index">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar
            </a>
        </div>
    </form>
</section>
