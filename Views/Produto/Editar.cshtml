@using LojaProdutos.Dto.Produto
@model EditarProdutoDto

<section class="container mt-5">
    <form asp-action="Editar" method="post" enctype="multipart/form-data">
        <h2>Edição de Produto - @Model.Nome</h2>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Foto" />

        <div class="mb-3">
            <label class="form-label" for="foto">Foto:</label>
            <input class="form-control shadow-none" type="file" name="foto" id="foto" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="nome">Nome:</label>
            <input class="form-control shadow-none" type="text" asp-for="Nome" id="nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="marca">Marca:</label>
            <input class="form-control shadow-none" type="text" asp-for="Marca" id="marca" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="valor">Valor:</label>
            <input class="form-control shadow-none" type="number" asp-for="Valor" id="valor" min="0.01" step="0.01" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="quantidade">Quantidade:</label>
            <input class="form-control shadow-none" type="number" asp-for="QuantidadeEstoque" id="quantidade" min="1" />
            <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="categoria">Categoria:</label>
            <select class="form-select" asp-for="CategoriaModelId" id="categoria"
                    asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nome", Model.CategoriaModelId))">
                <option value="">Selecione uma categoria</option>
            </select>
            <span asp-validation-for="CategoriaModelId" class="text-danger"></span>
        </div>

        <div class="d-flex mt-3">
            <button type="submit" class="btn btn-success w-50 me-2"><i class="bi bi-pencil me-1"></i> Editar</button>
            <a class="btn btn-info w-50" asp-action="Index">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar
            </a>
        </div>
    </form>
</section>
