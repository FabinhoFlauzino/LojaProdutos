@model ProdutoModel

<section class="conatiner my-5">
    <div class="p-5 text-center bg-body-tertiary rounded-3">
        <img src="/imagem/@Model.Foto" style="width: 350px; height: 350px;"/>
        <h3 class="text-body-emphasis">@Model.Nome</h3>
        <p class="text-muted">@Model.Marca - @Model.Categoria.Nome</p>

        <ul class="list-group list-group-flush">
            <li class="list-group-item">R$ @Model.Valor.ToString("F2")</li>
        </ul>

        <form method="post" asp-action="BaixarEstoque" asp-controller="Estoque" asp-route-id="@Model.Id" class="mt-5">
            <button type="submit" class="btn btn-success">Comprar</button>
        </form>

        <a class="btn btn-info w-50 mt-3" asp-controller="Home" asp-action="Index">Voltar</a>
    </div>
</section>
